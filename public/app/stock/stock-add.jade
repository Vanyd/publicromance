//Adding new stock item
.container
    .well
        //giving the form a name to access it from Controller
        form.form-horizontal(name="addStockForm")
            fieldset
                legend Add new Stock Item
                .form-group
                    label.col-md-2.control-label(for="name") Product Name
                    .col-md-10
                        input.form-control(name="name", type="text", placeholder="Product Name", required, ng-model="name")
                .form-group
                    label.col-md-2.control-label(for="description") Description
                    .col-md-10
                        input.form-control(name="description", type="text", placeholder="Description", required, ng-model="description")
                .form-group
                    label.col-md-2.control-label(for="category") Category
                    .col-md-8
                        select.form-control(name="pc", required, ng-model="category", ng-options="category.name as category.name for category in categories")
                    button(ng-click="addCategory()") Add Category
                .form-group
                    label.col-md-2.control-label(for="isVintage") Vintage
                    .col-md-1
                        input.form-control(name="vintage", type="checkbox", ng-model="isVintage")
                    label.col-md-2.control-label(for="isAccessory") Accessory
                    .col-md-1
                        input.form-control(name="accessory", type="checkbox", ng-model="isAccessory")
                .form-group
                    label.col-md-2.control-label(for="storequantity") Store Quantity
                    .col-md-10
                        input.form-control(name="price", type="number", min="0", required, ng-model="storequantity")
                .form-group
                    label.col-md-2.control-label(for="warehousequantity") Warehouse Quantity
                    .col-md-10
                        input.form-control(name="price", type="number", min="0", required, ng-model="warehousequantity")
                .form-group
                    label.col-md-2.control-label(for="costprice") Cost Price
                    .col-md-10
                        input.form-control(name="costprice", type="number", min="0.01", step="0.01",  required, ng-model="costprice")
                .form-group
                    label.col-md-2.control-label(for="retailprice") Retail Price
                    .col-md-10
                        input.form-control(name="retailprice", type="number", min="0.01", step="0.01",  required, ng-model="retailprice")
                .form-group
                    .col-md-10.col-md-offset-2
                        .pull-right
                            //If signup form is invalid, button is disabled
                            button.btn.btn-primary(ng-click="addstock()", ng-disabled="signupForm.$invalid") Submit
                            | &nbsp &nbsp;
                            a.btn(href="/stock") Cancel
